            <ul>
                <li><a href="/register">Register</a></li>
                <li> <a href="/feedback">Feedback</a></li>
            </ul>
        </div>

    </nav>

    <h1>Event Registration Form</h1>

    <form id="registrationForm" action="/registrationform/submitted" method="POST">
        <label for="studentName">Student Name:</label>
        <input type="text" id="studentName" name="studentName" required placeholder="Enter name:">

        <label for="studentEmail">Student Email:</label>
        <input type="email" id="studentEmail" name="studentEmail" required placeholder="Enter Student Email:">

        <label for="studentNumber">Student Number:</label>
        <input type="text" id="studentNumber" name="studentNumber" pattern="[0-9]+" required
            placeholder="Enter Student number">

        <label for="eventSelection">Select Event:</label>
        <select id="eventSelection" name="eventSelection" required>
            <option value="">Select an event</option>
            <option value="event1">Event 1</option>
            <option value="event2">Event 2</option>
            <!-- Add more event options as needed -->
        </select>

        <button type="submit">Register</button>
    </form>

    <!---view registrations -->
    <button class="btn btn-info" style="margin-top: 5%;"><a href="/showRegistrations">Show
            Registrations</a></button>
    <br> <br>

    <button class="btn btn-info"><a href="/showParticipants" style="color: white;">Show participants</a></button>
    <script>
        function submitForm() {
            // Client-side validation
            var studentName = document.getElementById('studentName').value;
            var studentEmail = document.getElementById('studentEmail').value;
            var studentNumber = document.getElementById('studentNumber').value;
            var eventSelection = document.getElementById('eventSelection').value;

            // Check if fields are not empty
            if (!studentName || !studentEmail || !studentNumber || !eventSelection) {
                alert('All fields are required!');
                return;
            }

            // Validate student number
            if (!/^[0-9]+$/.test(studentNumber)) {
                alert('Student number should be a number!');
                return;
            }

            // Perform additional email validation if needed

            // Perform any other custom validations as needed

            // If all validations pass, you can submit the form
            alert('Form submitted successfully!');
        }
    </script>

</body>

</html>